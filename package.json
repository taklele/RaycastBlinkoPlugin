{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "blinko-journal",
  "title": "Blinko Journal",
  "description": "快速发送日记到 Blinko",
  "icon": "icon.png",
  "author": "Guanying",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "create-journal",
      "title": "新建日记",
      "description": "快速创建并发送日记到 Blinko",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "apiUrl",
      "type": "textfield",
      "required": true,
      "title": "API 地址",
      "description": "Blinko API 的完整 URL",
      "default": "https://your-blinko-instance.com/api/v1/note/upsert",
      "placeholder": "https://your-blinko-instance.com/api/v1/note/upsert"
    },
    {
      "name": "apiToken",
      "type": "password",
      "required": true,
      "title": "API Token",
      "description": "用于认证的 Bearer Token"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.83.2",
    "@raycast/utils": "^1.17.0",
    "axios": "^1.7.7"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "^20.8.10",
    "@types/react": "18.2.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
